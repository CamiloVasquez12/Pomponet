@model IEnumerable<PomponetWebsite.Models.Player_Achievements>

@{
    ViewData["Title"] = "Index";
    var hasItems = Model.Any();
}

<h1>List Player_Achievements</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-text" placeholder="Search..." />
        <input type="submit" value="Search" class="btn btn-sm btn-dark" />
    </div>
</form>

@if (hasItems)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["AchievementSortParm"]">
                        @Html.DisplayNameFor(model => Model.First().Achievements.Achievement)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.First().Logros_Totales)
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["PlayerSortParm"]">
                        @Html.DisplayNameFor(model => Model.First().Players.Score)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.First().Deleted)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Achievements.Achievement)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Logros_Totales)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Players.Score)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deleted)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id_Player_Achievement">Edit</a> |
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id_Player_Achievement">Details</a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id_Player_Achievement">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No player achievements found.</p>
}

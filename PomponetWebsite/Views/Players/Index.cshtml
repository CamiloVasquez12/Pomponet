@model IEnumerable<PomponetWebsite.Models.Players>

@{
    ViewData["Title"] = "Index";
}

<h1>List Players</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<form asp-controller="Players" asp-action="Index" method="get">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text" />
        <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
        @if (!string.IsNullOrEmpty(ViewData["Error"] as string))
        {
            <span class="text-danger">@ViewData["Error"]</span>
        }
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-filtro="@ViewData["FiltroScore"]">
                    @Html.DisplayNameFor(model => model.Score)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-filtro="@ViewData["FiltroId_Person"]">
                    @Html.DisplayNameFor(model => model.Id_Person)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Person)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deleted)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id_Player">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id_Player">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id_Player">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<PomponetWebsite.Models.Players>

@{
    ViewData["Title"] = "Index";
}

<h1>List Players</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-text" placeholder="Search..." />
        <input type="submit" value="Search" class="btn btn-sm btn-dark" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ScoreSortParm"]">
                    @Html.DisplayNameFor(model => model.Score)
                </a>
            </th>

            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PersonSortParm"]">
                    @Html.DisplayNameFor(model => model.First().People.Names)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.People.Names)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deleted)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id_Player">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id_Player">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id_Player">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<PomponetWebsite.Models.Types_Fungicides>

@{
    ViewData["Title"] = "Types of Fungicides";
}

<h1>Types of Fungicides</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<form asp-controller="Types_Fungicides" asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text" />
        <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-filtro="@ViewData["FiltroType_Fungicide"]">Type Fungicide</a>
            </th>
            <th>
                Fungicide
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Type_Fungicide)</td>
                <td>
                    @(item.Fungicides != null ? item.Fungicides.Name_Fungicide : "No Fungicide")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deleted)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id_Type_Fungicide">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id_Type_Fungicide">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id_Type_Fungicide">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
